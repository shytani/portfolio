							"    \r",
							"});\r",
							"\r",
							"\r",
							"pm.test(\"3 test\", function () {\r",
							"    pm.expect(pm.response.text()).to.include(pm.collectionVariables.get(\"summary\"));\r",
							"    pm.expect(pm.response.text()).to.include(pm.collectionVariables.get(\"description\"));\r",
							"});\r",
							"\r",
